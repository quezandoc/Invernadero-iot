---
import { Image } from 'astro:assets';
import tempImg from '../assets/img/thermometer_465644.png';
import humImg from '../assets/img/humidity_8923690.png';

const {
  title = 'Invernadero 1',
  temp = '21',
  hum = '54',
  type = 'success'
} = Astro.props
---

<div class="dashboard-widget radius-large space-24 elevation-400 space-content type-${type}">
  <p class="size-24">
    <strong>{title}</strong>
  </p>
  <div class="container" data-auto-grid="2" data-grid-center>
    <Image src={tempImg} alt="placeholder-temp." width="80" height="80"/>
    <Image src={humImg} alt="placeholder-hum." width="80" height="80"/>
    <p class="size-16"><em>{temp} Celsius</em></p>
    <p class="size-16"><em>{hum} %</em></p>
  </div>
</div>

<style lang="scss">
  .dashboard-widget {
    &.type-success {
      > p:first-child {
        color: var(--success-700);
      }
    }

    &.type-error {
      > p:first-child {
        color: var(--error-700);
      }
    }

    background-color: var(--neutral-100);
  }

  :global(.darkmode .dashboard-widget) {
    background-color: var(--neutral-900);

    &.type-success {
      > p:first-child {
        color: var(--success-400);
      }
    }

    &.type-error {
      > p:first-child {
        color: var(--error-400);
      }
    }
  }
</style>
